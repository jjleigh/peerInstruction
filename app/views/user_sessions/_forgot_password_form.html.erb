<!-- # app/views/user_sessions/_forgot_password_form.html.erb -->
<!-- this is the form for the forgot password form -->
<div class="row">
	<div class="small-6 columns">
		<%= form_tag password_resets_path, :method => :post do %>
	  	<div class="field">
	    	<%= label_tag :email %><br />
	    	<%= text_field_tag :email %> <%= submit_tag "Reset my password!", :class => 'button [tiny small large]' %>
	  	</div>
		<% end %>
	</div>
</div>
