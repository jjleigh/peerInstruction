
<!-- this is the form for the login form -->


  <%= form_tag user_sessions_path, :method => :post do %>
    <div class="field">
      <%= label_tag :email %><br />
      <%= text_field_tag :email %>
    </div>
    <div class="field">
      <%= label_tag :password %><br />
      <%= password_field_tag :password %>
    </div>
    <div class="field">
      <%= label_tag :remember %>
      <%= check_box_tag :remember %>
    <div class="actions">
      <%= submit_tag "Login", :class => 'button [tiny small large] form-buttons text-center' %>
    </div>
  <% end %>


