<% if @question.is_open == true %>
 <h3>
   <%= @question.question %>
 </h3>
 <ol type="a">
 	<% @question.answer_choices.each do |a| %>
		<li><%= button_to a.answer_choice, question_answer_choice_responses_path(@question, a) %></li>
 		<% end %>
 </ol>
<% else %>
	<% @question.answer_choices.each do |a| %>
		<li><%= a.answer_choice %></li>
 		<% end %>
<% end %>
 <%= link_to "Back to my questions", questions_path %>
